<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorBlue</item>
        <item name="colorPrimaryDark">@color/colorBlack</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorGrey</item>

        <item name="android:textColor">@color/colorGreen</item>
        <item name="android:gravity">center</item>
        <item name="android:tint">@color/colorGreen</item>
        <item name="android:typeface">monospace</item>
        <item name="imageButtonStyle">@style/ImageButton</item>
        <item name="editTextStyle">@style/EditText</item>

        <item name="radioButtonStyle">@style/RadioButton</item>

    </style>
    <style name="ImageButton" parent="Base.Widget.AppCompat.ImageButton">
        <item name="android:background">@color/colorDarkBlack</item>
    </style>

    <style name="EditText" parent="Base.V7.Widget.AppCompat.EditText">
        <item name="android:background">@color/colorBlack</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:gravity">center</item>
    </style>



    <style name="RadioButton" parent="Base.Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:gravity">center</item>
    </style>

    <!-- Theme two. -->

   <style name="AppTheme.CustomT">
        <item name="colorPrimary">@color/colorBlack</item>
        <item name="colorPrimaryDark">@color/colorGrey</item>
        <item name="colorAccent">@color/colorWhite</item>
        <item name="android:windowBackground">@color/colorGreyLigth</item>

        <item name="imageButtonStyle">@style/ImageButton.Custom</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="editTextStyle">@style/EditText.Custom</item>

    </style>

    <style name="ImageButton.Custom">
        <item name="android:background">@color/colorGrey</item>
    </style>

    <style name="EditText.Custom">
        <item name="android:background">@color/colorBlack</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:gravity">center</item>
    </style>




</resources>
